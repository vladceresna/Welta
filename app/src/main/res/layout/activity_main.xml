<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:paddingHorizontal="40dp"
        android:paddingTop="40dp"
        android:id="@+id/scrview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textcom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Rula" />

            <TextView
                android:id="@+id/textserv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="@string/app_name"

                />
            <LinearLayout
                android:id="@+id/group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/layout_corn_bgc"
                android:orientation="vertical"
                android:padding="15dp">

                <EditText
                    android:id="@+id/inputname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/layout_corn_bg"
                    android:hint="Имя"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/vmarg"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/inputmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/layout_corn_bg"
                    android:hint="Почта"
                    android:paddingLeft="25dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputpassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_corn_bg"
                    android:hint="Пароль"
                    android:paddingLeft="25dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputreppassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_corn_bg"
                    android:hint="Повторите пароль"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/inputid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_corn_bg"
                    android:hint="RulaID"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/aptempt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Этот сервис является частью ретсистемы Rula. В ней вы регистрируетесь используя свою почту, но в самой системе её не видит ни один пользователь кроме Вас!\n
Вместо этого другие пользователи видят ваш RulaID - ваш уникальный идентификатор (своеобразный логин). В нашей системе он заменяет собой почту, и все ваши посты, письма, действия, итп. подписываются именно вашим RulaID"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <Button
                            android:id="@+id/komprenis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_corn_bgc"
                            android:text="Понял" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/layout_corn_bgbutton"
                android:elevation="4dp"
                android:padding="0dp"
                android:text="Войти"
                android:textAllCaps="false"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/layout_corn_bgc"
                android:id="@+id/desctext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="У вас еще нет аккаунта?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttondown"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/layout_corn_bgbutton"
                android:elevation="4dp"
                android:padding="0dp"
                android:text="Регистрация"
                android:textAllCaps="false"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_corn_bgc">
                <TextView

                    android:text="Используя или регистрируясь в сервисах Rula, включая этот сервис, вы подтверждаете своё согласие с тем что ваш возраст больше 13 лет, а также согласие с Политикой конфиденциальности и Условиями использования:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:padding="0dp"
                    android:id="@+id/butpp"
                    android:textSize="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/layout_corn_bgbutton"
                    android:text="Политика конфиденциальности"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <Button
                    android:padding="0dp"
                    android:id="@+id/buttu"
                    android:textSize="10dp"
                    android:background="@drawable/layout_corn_bgbutton"
                    android:text="Условия использования"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <TextView
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/layout_corn_bgc"
                android:id="@+id/desctextmess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Чтобы все сервисы Rula работали корректно, войдите во всех них под одним аккаунтом и обязательно установите Rosto. С его помощью вы можете администрировать свой аккаунт"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>